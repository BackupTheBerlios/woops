<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
	<class name="business.activity.Activity" table="Activity">
		<!-- identifiant d'une occurrence dans la table -->
		<id
			column="id"
			name="id"
			type="integer"
		>
			<!--identifiant auto-incrementÃ© --> 
			<generator class="identity" />
		</id>
		
		<property
			column="name"
			length="50"
			name="name"
			not-null="true"
			type="string"
		 />	
		 
		 <property
			column="details"
			name="details"
			not-null="false"
			type="string"
		 />	
		 
		 <property
			column="startDate"
			name="startDate"
			not-null="false"
			type="timestamp"
		 />
		 
		 <property
			column="endDate"
			name="endDate"
			not-null="false"
			type="timestamp"
		 />	
		
		 <property
			column="user"
			name="userId"
			not-null="false"
			type="integer"
		 />
		 
		 <many-to-one
			class="business.activity.state.IActivityState"
			name="state"
			not-null="true"
			>
			<column name="state" />
		</many-to-one>

	</class>	
</hibernate-mapping>
