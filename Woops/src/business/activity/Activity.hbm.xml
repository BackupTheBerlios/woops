<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
	<class name="business.activity.Activity" table="Activity">
		<!-- identifiant d'une occurrence dans la table -->
		<id
			column="id"
			name="id"
			type="integer"
		>
			<!--identifiant auto-incrementé --> 
			<generator class="identity" />
		</id>
		
		<property
			column="name"
			length="50"
			name="name"
			not-null="true"
			type="string"
		 />	
		 
		 <property
			column="details"
			name="details"
			not-null="false"
			type="string"
		 />	
		
		<!-- Une activité est réalisé par un utilisateur -->
		<many-to-one
			class="business.user.User"
			name="user"
			not-null="true"
			>
			<column name="user" />
		</many-to-one>

	</class>	
</hibernate-mapping>
